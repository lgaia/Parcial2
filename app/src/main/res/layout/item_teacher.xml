<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivTeacher"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"
        android:src="@drawable/teacher"
        />
    <TextView
        android:id="@+id/tvTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ivTeacher"
        tools:text= "Nombre"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginStart="6dp"
        />
    <TextView
        android:id="@+id/tvTeacherLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherName"
        app:layout_constraintStart_toEndOf="@id/ivTeacher"
        tools:text= "Apellido"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginStart="6dp"
        />
    <TextView
        android:id="@+id/tvTeacherClassroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTeacherLastName"
        app:layout_constraintStart_toEndOf="@id/ivTeacher"
        tools:text= "Carrera"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="6dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>